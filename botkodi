import openai
import os
from dotenv import load_dotenv
from telegram import Update
from telegram.ext import Application, CommandHandler, MessageHandler, filters, CallbackContext

# .env faylini yuklash
load_dotenv()

# OpenAI API kalitini olish
openai.api_key = os.getenv("OPENAI_API_KEY")

# Telegram API tokenini olish
TELEGRAM_API_TOKEN = os.getenv("TELEGRAM_API_TOKEN")

# Start komandasi
async def start(update: Update, context: CallbackContext) -> None:
    await update.message.reply_text('Salom! Men ChatGPT bilan ishlovchi botman. Savol bering!')

# OpenAI ChatGPTdan javob olish
async def chatgpt_response(query: str) -> str:
    response = openai.Completion.create(
        model="gpt-3.5-turbo",  # Modelni tanlash
        prompt=query,
        max_tokens=150
    )
    return response.choices[0].text.strip()

# Foydalanuvchi xabarini olish va javob berish
async def handle_message(update: Update, context: CallbackContext) -> None:
    user_message = update.message.text  # Foydalanuvchidan xabar
    bot_response = await chatgpt_response(user_message)  # OpenAI'dan javob olish
    await update.message.reply_text(bot_response)  # Javobni yuborish

async def main():
    # Updater yaratish va tokenni ulash
    application = Application.builder().token(TELEGRAM_API_TOKEN).build()

    # /start komandasi qo'shish
    application.add_handler(CommandHandler('start', start))

    # Foydalanuvchi xabarlarini ishlash
    application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))

    # Botni ishga tushirish
    await application.run_polling()

if __name__ == '__main__':
    import asyncio
    asyncio.run(main())
