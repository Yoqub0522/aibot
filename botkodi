import openai
import os
from dotenv import load_dotenv
from telegram import Update
from telegram.ext import Updater, CommandHandler, MessageHandler, Filters, CallbackContext

# .env faylini yuklash
load_dotenv()

# OpenAI API kalitini olish
openai.api_key = os.getenv("OPENAI_API_KEY")

# Telegram API tokenini olish
TELEGRAM_API_TOKEN = os.getenv("TELEGRAM_API_TOKEN")

# Start komandasi
def start(update: Update, context: CallbackContext) -> None:
    update.message.reply_text('Salom! Men ChatGPT bilan ishlovchi botman. Savol bering!')

# OpenAI ChatGPTdan javob olish
def chatgpt_response(query: str) -> str:
    response = openai.Completion.create(
        model="gpt-3.5-turbo",  # Modelni tanlash
        prompt=query,
        max_tokens=150
    )
    return response.choices[0].text.strip()

# Foydalanuvchi xabarini olish va javob berish
def handle_message(update: Update, context: CallbackContext) -> None:
    user_message = update.message.text  # Foydalanuvchidan xabar
    bot_response = chatgpt_response(user_message)  # OpenAI'dan javob olish
    update.message.reply_text(bot_response)  # Javobni yuborish

def main():
    # Updater yaratish va tokenni ulash
    updater = Updater(TELEGRAM_API_TOKEN)

    # Dispatcher yordamida handlerlarni qo'shish
    dispatcher = updater.dispatcher

    # /start komandasi qo'shish
    dispatcher.add_handler(CommandHandler('start', start))

    # Foydalanuvchi xabarlarini ishlash
    dispatcher.add_handler(MessageHandler(Filters.text & ~Filters.command, handle_message))

    # Botni ishga tushirish
    updater.start_polling()

    # Botni to'xtatishdan oldin kutish
    updater.idle()

if __name__ == '__main__':
    main()
